---
import Navigation from "../components/Navigation.astro";

export interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "The Rocky Horror Picture Show - 25th Anniversary Production",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Standard Favicon -->
    <link rel="icon" type="image/x-icon" href="./favicon.ico" />

    <!-- PNG Favicons -->
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="./favicon/favicon-16.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="./favicon/favicon-32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="48x48"
      href="./favicon/favicon-48.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="64x64"
      href="./favicon/favicon-64.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="180x180"
      href="./favicon/favicon-180.png"
    />

    <!-- Apple Touch Icon (for iOS) -->
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="./favicons/favicon-180.png"
    />

    <!-- High-Resolution / PWA -->
    <link
      rel="icon"
      type="image/png"
      sizes="512x512"
      href="./favicons/favicon-512.png"
    />

    <!-- Web App Manifest -->
    <link rel="manifest" href="./manifest.json" />

    <!-- Theme Color for Mobile Browsers -->
    <meta name="theme-color" content="#dc2626" />

    <!-- Additional PWA Meta Tags -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta name="apple-mobile-web-app-title" content="RHPS 2025" />
    <meta name="msapplication-TileColor" content="#dc2626" />
    <meta name="msapplication-config" content="/browserconfig.xml" />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Roboto:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.cdnfonts.com/css/malicious-moonlight"
      rel="stylesheet"
    />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />

    <link
      href="https://fonts.cdnfonts.com/css/malicious-moonlight"
      rel="stylesheet"
    />

    <!-- Custom CSS - Load after Bootstrap to override -->
    <style is:global>
      @font-face {
        font-family: "Rockaoe";
        src: url("/fonts/ROCKYAOE.ttf") format("truetype");
      }

      /* @font-face {
        font-family: "Malicious Moonlight";
        src: url("https://fonts.cdnfonts.com/css/malicious-moonlight")
          format("truetype");
      } */

      .font-rocky {
        font-family: "Rockaoe", serif !important;
      }
      .font-malicious-moonlight {
        font-family: "Malicious Moonlight", serif !important;
      }
    </style>
    <style is:global>
      :root {
        --rhps-red: #dc2626;
        --rhps-purple: #7c3aed;
        --rhps-pink: #ec4899;
        --rhps-gold: #f59e0b;
      }

      .bg-rhps-gradient {
        background: linear-gradient(
          0deg,
          #000000 0%,
          var(--rhps-red) 80%,
          var(--rhps-gold) 100%
            /* var(--rhps-red) 0%,
          var(--rhps-purple) 50%,
          var(--rhps-pink) 100% */
        );
      }
      .container-bg-rhps-gradient {
        background: linear-gradient(
          225deg,
          var(--rhps-red) 0%,
          #000000 20%,
          var(--rhps-gold) 50%,
          #000000 80%,
          var(--rhps-red) 100%
            /* var(--rhps-red) 0%,
          var(--rhps-purple) 50%,
          var(--rhps-pink) 100% */
        );
      }

      .text-rhps-gold {
        /* color: yellow; */
        color: var(--rhps-gold) !important;
      }

      .border-rhps-gold {
        /* border-color: yellow; */
        border-color: var(--rhps-gold) !important;
      }

      /* Bootstrap-compatible utility classes */
      .text-rhps-red {
        color: var(--rhps-red) !important;
      }

      .bg-rhps-red {
        background-color: var(--rhps-red) !important;
      }

      .border-rhps-red {
        border-color: var(--rhps-red) !important;
      }

      /* Custom animations */
      @keyframes pulse {
        0% {
          opacity: 1;
        }
        50% {
          opacity: 0.5;
        }
      }

      .animate-pulse {
        animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
      }
      .scroll-section {
        scroll-margin-top: 4rem;
      }
    </style>
    <!-- <script type="text/javascript">
      window.$crisp = [];
      window.CRISP_WEBSITE_ID = "f46a32e3-7d7b-4f5a-b2a8-72b6d1e2ffc9";
      (function () {
        d = document;
        s = d.createElement("script");
        s.src = "https://client.crisp.chat/l.js";
        s.async = 1;
        d.getElementsByTagName("head")[0].appendChild(s);
      })();
    </script> -->
  </head>
  <body class="bg-black text-white">
    <Navigation />
    <slot />
    <!-- <div id="map" style="height: 600px; width: 100%;"></div> -->
    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"></script>
  </body>
</html>
