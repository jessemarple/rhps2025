      document.addEventListener("DOMContentLoaded", function () {
        // Handle ticket selection and modal updates
        const ticketModal = document.getElementById("ticketModal");
        const ticketQuantity = document.getElementById("ticketQuantity");
        const ticketSummary = document.getElementById("ticketSummary");
        const ticketPrice = document.getElementById("ticketPrice");
        const propKitSummary = document.getElementById("propKitSummary");
        const totalPrice = document.getElementById("totalPrice");

        // Store current ticket data
        let currentTicketData = {
          date: "",
          time: "",
          price: 0,
          type: "",
        };

        // Check if all required elements exist
        if (
          !ticketModal ||
          !ticketQuantity ||
          !ticketSummary ||
          !ticketPrice ||
          !propKitSummary ||
          !totalPrice
        ) {
          console.error("Required modal elements not found");
          return;
        }

        // Listen for modal show events
        ticketModal.addEventListener("show.bs.modal", function (event: any) {
          const button = event.relatedTarget as HTMLButtonElement;

          if (!button) return;

          // Get ticket data from button attributes
          currentTicketData = {
            date: button.getAttribute("data-ticket-date") || "",
            time: button.getAttribute("data-ticket-time") || "",
            price: parseInt(button.getAttribute("data-ticket-price") || "0"),
            type: button.getAttribute("data-ticket-type") || "",
          };

          // Update modal content
          updateModalContent();
        });

        // Listen for quantity changes
        ticketQuantity.addEventListener("change", function () {
          updateModalContent();
        });

        function updateModalContent() {
          if (
            !ticketQuantity ||
            !ticketSummary ||
            !ticketPrice ||
            !propKitSummary ||
            !totalPrice
          ) {
            return;
          }

          const quantity = parseInt(
            (ticketQuantity as HTMLSelectElement).value
          );
          const total = currentTicketData.price * quantity;

          // Update ticket summary
          ticketSummary.textContent = `${quantity} Ticket${quantity > 1 ? "s" : ""} - ${currentTicketData.date} ${currentTicketData.time}`;

          // Update ticket price
          ticketPrice.textContent = `$${total.toFixed(2)}`;

          // Update prop kit summary
          propKitSummary.textContent = `Prop Kit${quantity > 1 ? "s" : ""} (${quantity})`;

          // Update total price
          totalPrice.textContent = `$${total.toFixed(2)}`;
        }
      });
