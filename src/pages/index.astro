  >
    <!-- Background with animated gradient -->
    <div
      class="position-absolute top-0 start-0 w-100 h-100 bg-rhps-gradient animate-pulse"
    >
    </div>
    <img
      src="./images/noun-rocky-horror-681055.svg"
      alt="The Rocky Horror Picture Show Hero Background"
      class="position-absolute top-0 start-0 w-100 h-100"
    />

    <!-- Content -->
    <div class="position-relative" style="z-index: 10;">
      <div class="container text-center" style="padding-top: 75px;">
        <h1 class="font-malicious-moonlight display-1 mb-0">
          THE ROCKY HORROR
        </h1>
        <h2 class="font-malicious-moonlight display-1 mb-0">PICTURE SHOW</h2>
        <h2 class="font-malicious-moonlight display-1 mb-2">EXPERIENCE</h2>

        <div class="">
          <p class="fs-3 fw-light mb-3">
            <span class="text-rhps-gold fw-bold"
              >25th Anniversary Production</span
            >
          </p>
          <p class="fs-4 mb-4">Celebrating 50 Years of the Cult Classic</p>

          <!-- Show Dates -->
          <div class="row g-4 mb-5">
            <div class="col-md-6 text-center">
              <h3 class="fs-1 fw-bold text-rhps-gold mb-2">October 24th</h3>
              <p class="fs-5">8:00 PM & 11:59 PM</p>
            </div>
            <div class="col-md-6 text-center">
              <h3 class="fs-1 fw-bold text-rhps-gold mb-2">October 25th</h3>
              <p class="fs-5">8:00 PM & 11:59 PM</p>
            </div>
            <div class="col-12 text-center">
              <h3 class="fs-2 fw-bold text-rhps-gold mb-2">
                Kenworthy Performing Arts Centre
              </h3>
              <p class="fs-5">Moscow, ID</p>
            </div>
          </div>
        </div>
        <div class="text-center mb-4">
          <a
            href="#tickets"
            class="btn btn-warning btn-lg fw-bold px-5 py-3"
            style="
            background-color: var(--rhps-gold);
            border-color: var(--rhps-gold);
            color: black;
            font-size: 1.7rem;
          "
          >
            <img
              src="./images/noun-fishnet-stockings-1154871.svg"
              alt="Fishnet Stockings Icon"
              style="height: 2.5rem; vertical-align: middle; "
            />
            Get Your Tickets
            <img
              src="./images/noun-fishnet-stockings-1154871.svg"
              alt="Fishnet Stockings Icon"
              style="height: 2.5rem; vertical-align: middle; transform: scaleX(-1);"
